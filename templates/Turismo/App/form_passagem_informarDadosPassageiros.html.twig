{% extends '@CrosierLibBase/base.html.twig' %}




{% block body %}

    <div class="container-sm" style="margin-bottom: 50px">

        <div class="row mb-2">
            <div class="col-12 text-center">
                <img class="card-img-top" src="{{ getEnv('CROSIER_LOGO') }}" style="max-width: 200px"
                     alt="Card image cap">
            </div>
        </div>

        <div class="card">

            <div class="card-header">


                <div class="row">
                    <div class="col-12">
                        <h3>Dados dos passageiros</h3>
                    </div>

                </div>

            </div>

            <div class="card-body">

                <div class="row">
                    <div class="col">
                        {% include '@CrosierLibBase/Util/flashesOnAlerts.html.twig' %}
                    </div>
                </div>

                <form action="{{ url('tur_app_compra_resumo') }}" method="post">


                    {% for poltrona in poltronas %}

                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <strong>Poltrona {{ poltrona }}</strong>
                                </h5>

                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="dadosPassageiro_rg_{{ poltrona }}" class="required">RG</label>
                                            <input type="text" id="dadosPassageiro_rg_{{ poltrona }}" name="dadosPassageiro[{{ poltrona }}][rg]"
                                                   class="form-control" required
                                                   value="">
                                            <input type="hidden" id="dadosPassageiro_poltrona_{{ poltrona }}" name="dadosPassageiro[{{ poltrona }}][poltrona]"
                                                   class="form-control" required
                                                   value="{{ poltrona }}">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="dadosPassageiro_nome_{{ poltrona }}" class="required">Nome</label>
                                            <input type="text" id="dadosPassageiro_nome_{{ poltrona }}" name="dadosPassageiro[{{ poltrona }}][nome]"
                                                   class="form-control" required
                                                   value="">
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="dadosPassageiro_qtdeBagagens_{{ poltrona }}" class="required">Qtde Bagagens</label>
                                            <input type="number" id="dadosPassageiro_qtdeBagagens_{{ poltrona }}" name="dadosPassageiro[{{ poltrona }}][qtdeBagagens]"
                                                   class="form-control" required
                                                   value="1">
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                    {% endfor %}


                    <div class="col-sm-12">
                        <div class="form-group">
                            <label for="btnFiltrar">&nbsp;</label>
                            <button type="submit" class="btn btn-primary btn-block" id="btnFiltrar" title="Pesquisar">
                                <i class="fas fa-forward"></i> Avan√ßar
                            </button>
                        </div>
                    </div>


                </form>

            </div>
        </div>


    </div>


{% endblock %}

{% block down_scripts %}
    {{ encore_entry_script_tags('Turismo/App/form_passagem_selecionarPoltronas') }}
{% endblock %}
