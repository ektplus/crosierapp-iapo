{% extends 'Turismo/App/form_passagem_base.html.twig' %}


{% block conteudo %}

    <div class="card">

        <div class="card-header">


            <div class="row">
                <div class="col-12">
                    <h3>Dados dos passageiros</h3>
                </div>

            </div>

        </div>

        <div class="card-body">

            <div class="row">
                <div class="col">
                    {% include '@CrosierLibBase/Util/flashesOnAlerts.html.twig' %}
                </div>
            </div>

            <form action="{{ url('tur_app_compra_informarDadosPassageiros') }}" method="post">


                {% for poltrona in poltronas %}

                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <strong>Poltrona {{ poltrona }}</strong>
                            </h5>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="dadosPassageiros_rg_{{ poltrona }}" class="required">RG</label>
                                        <input type="text" id="dadosPassageiros_rg_{{ poltrona }}"
                                               name="dadosPassageiros[{{ poltrona }}][rg]"
                                               class="form-control" required
                                               value="">
                                        <input type="hidden" id="dadosPassageiros_poltrona_{{ poltrona }}"
                                               name="dadosPassageiros[{{ poltrona }}][poltrona]"
                                               class="form-control" required
                                               value="{{ poltrona }}">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="dadosPassageiros_nome_{{ poltrona }}" class="required">Nome</label>
                                        <input type="text" id="dadosPassageiros_nome_{{ poltrona }}"
                                               name="dadosPassageiros[{{ poltrona }}][nome]"
                                               class="form-control" required
                                               value="">
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label for="dadosPassageiros_qtdeBagagens_{{ poltrona }}" class="required">Qtde
                                            Bagagens</label>
                                        <input type="number" id="dadosPassageiros_qtdeBagagens_{{ poltrona }}"
                                               name="dadosPassageiros[{{ poltrona }}][qtdeBagagens]"
                                               class="form-control" required
                                               value="1">
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                {% endfor %}


                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="btnFiltrar">&nbsp;</label>
                        <button type="submit" class="btn btn-primary btn-block" id="btnFiltrar" title="Pesquisar">
                            <i class="fas fa-forward"></i> Avan√ßar
                        </button>
                    </div>
                </div>


            </form>

        </div>
    </div>

{% endblock %}
