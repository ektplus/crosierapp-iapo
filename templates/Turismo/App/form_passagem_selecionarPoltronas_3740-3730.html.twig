{% extends 'Turismo/App/form_passagem_base.html.twig' %}


{% block up_scripts %}
    <style>
        .naoPoltrona {
            background-color: grey;
            color: white;
            font-size: smaller;
        }
    </style>
{% endblock %}

{% block conteudo %}

    <div class="card">

        <div class="card-header">


            <div class="row">
                <div class="col-12">
                    <h3>Selecionar poltronas</h3>
                </div>

            </div>

        </div>

        <div class="card-body">

            <div class="row">
                <div class="col">
                    {% include '@CrosierLibBase/Util/flashesOnAlerts.html.twig' %}
                </div>
            </div>

            <div class="row">
                <div class="col text-center">
                    Frente
                </div>
            </div>

            <form action="{{ url('tur_app_compra_informarDadosPassageiros') }}" method="post">


                <div class="row mb-2">
                    <div class="col-12 text-center text-muted sma mt-4">
                        <hr>
                        <small>Piso Superior</small>
                        <hr>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-3">
                        {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': 1, 'poltronas': poltronas} %}
                    </div>
                    <div class="col-3">
                        {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': 2, 'poltronas': poltronas} %}
                    </div>
                    <div class="col-3">

                    </div>
                    <div class="col-3">
                        {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': 3, 'poltronas': poltronas} %}
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-3">
                        {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': 5, 'poltronas': poltronas} %}
                    </div>
                    <div class="col-3">
                        {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': 6, 'poltronas': poltronas} %}
                    </div>
                    <div class="col-2">

                    </div>
                    <div class="col-4 text-center text-muted align-text-bottom">
                        <div class="naoPoltrona">Escadas</div>
                    </div>
                </div>

                <div class="row mb-2">
                    <div class="col-3">
                        {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': 7, 'poltronas': poltronas} %}
                    </div>
                    <div class="col-3">
                        {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': 8, 'poltronas': poltronas} %}
                    </div>
                    <div class="col-3">

                    </div>
                    <div class="col-3">

                    </div>
                </div>

                {% set j = 9 %}
                {% for i in 1..8 %}
                    <div class="row mb-2">
                        <div class="col-3">
                            {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': j+2, 'poltronas': poltronas} %}
                        </div>
                        <div class="col-3">
                            {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': j+3, 'poltronas': poltronas} %}
                        </div>
                        <div class="col-3">

                        </div>
                        <div class="col-3">
                            {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': j, 'poltronas': poltronas} %}
                        </div>
                    </div>
                    {% set j = j+4 %}
                {% endfor %}

                <div class="row mb-2">
                    <div class="col-12 text-center text-muted sma mt-4">
                        <hr>
                        <small>Piso Inferior</small>
                        <hr>
                    </div>
                </div>


                <div class="row mb-2">
                    <div class="col-3 text-center text-muted align-text-bottom">
                        <div class="naoPoltrona">W.C.</div>
                    </div>
                    <div class="col-3">

                    </div>
                    <div class="col-2">

                    </div>
                    <div class="col-4 text-center text-muted align-text-bottom">
                        <div class="naoPoltrona">Escadas</div>
                    </div>
                </div>


                {% set j = 41 %}
                {% for i in 1..4 %}
                    <div class="row mb-2">
                        <div class="col-3">
                            {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': j, 'poltronas': poltronas} %}
                        </div>
                        <div class="col-3">
                            {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': j+1, 'poltronas': poltronas} %}
                        </div>
                        <div class="col-3">

                        </div>
                        <div class="col-3">
                            {% include 'Turismo/App/poltrona.html.twig' with {'poltrona': j+2, 'poltronas': poltronas} %}
                        </div>
                    </div>
                    {% set j = j+4 %}
                {% endfor %}


                <div class="col-sm-12">
                    <div class="form-group">
                        <label for="btnAvancar">&nbsp;</label>
                        <button type="submit" class="btn btn-primary btn-block" id="btnAvancar" title="Avançar">
                            <i class="fas fa-forward"></i> Avançar
                        </button>
                    </div>
                </div>


            </form>

        </div>
    </div>

{% endblock %}

{% block down_scripts %}
    {{ encore_entry_script_tags('Turismo/App/form_passagem_selecionarPoltronas') }}
{% endblock %}
